<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.seu.ni.demo.Media.SMSActivity">

    <TextView
        android:id="@+id/tv_sms_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/string_msg_from"
        android:textSize="@dimen/sms_text_size"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sms_height">

        <TextView
            android:id="@+id/tv_sms_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/string_msg_content"
            android:textSize="@dimen/sms_text_size"
            />
    </ScrollView>

    <EditText
        android:id="@+id/et_sms_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/string_msg_to"
        android:phoneNumber="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_sms_content"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/sms_height"
            android:layout_weight="1"
            android:gravity="top"
            android:hint="@string/string_msg_content"
            />

        <Button
            android:id="@+id/bt_sms_send"
            android:layout_width="@dimen/sms_button"
            android:layout_height="wrap_content"
            android:text="@string/bt_sms_send"/>

    </LinearLayout>


</LinearLayout>
